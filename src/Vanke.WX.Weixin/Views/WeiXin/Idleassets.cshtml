<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container text-center text-white" style="line-height: 50px; font-size: 14px;">
        闲置资产
    </div>
</div>
<div ng-controller="IdleAssetsCtrl" style="padding-top: 50px;">
    <div class="container">
        <h4><span class="text-danger" ng-bind="idleAssetDescription"></span></h4>
    </div>
    <div class="hpanel" ng-repeat="asset in ::idleAssets">
        <div class="panel-heading hbuilt">
            <i class="panel-icon fa fa-list"></i>&nbsp;<span ng-bind="asset.area"></span>
        </div>
        <div class="panel-body list">
            <table class="table table-bordered table-hover nowrap" width="100%" ng-repeat="item in ::asset.items">
                <tbody>
                <tr>
                    <td style="width: 50%">
                        <strong>闲置物品</strong>
                    </td>
                    <td class="text-center">
                        <span ng-bind="item.Item"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>数量</strong>
                    </td>
                    <td class="text-center">
                        <span ng-bind="item.Quantity+item.Unit"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>管理负责人</strong>
                    </td>
                    <td class="text-center">
                        <span ng-bind="item.ManagerStaff"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <p>
                            <strong>备注</strong>
                        </p>
                        <span ng-bind="item.Comment == null || item.Comment == '' ? '无' : item.Comment"></span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/wwwroot/lib/jquery/jquery.js"></script>
    <script src="~/wwwroot/lib/angular/angular.js"></script>
    <script src="~/wwwroot/lib/angular-resource/angular-resource.js"></script>
    <script src="~/wwwroot/lib/sweetalert2/sweetalert2.min.js"></script>

    <script src="~/wwwroot/scripts/weixin_app.js"></script>
    <script src="~/wwwroot/scripts/api.js"></script>
    <script src="~/wwwroot/scripts/config.http.js"></script>
    <script src="~/wwwroot/scripts/factories.js"></script>

    <script src="~/wwwroot/scripts/controllers/weixin/idleassets.js"></script>
}
